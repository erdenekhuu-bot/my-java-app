<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.register.RegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="184dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/RegisterTitle"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/signup"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/feedbackText"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/description"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/RegisterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phoneInput"
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:inputType="number"
        android:maxLength="8"
        android:textSize="22sp"
        android:hint="@string/phonenumber"
        android:textStyle="bold"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/feedbackText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter"
        android:layout_width="0sp"
        android:layout_height="60sp"
        android:text="@string/continues"
        android:textSize="18sp"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="20sp"
        app:backgroundTint="@color/F182247"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@id/phoneInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="12sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/enter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/signupLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/orText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_exist"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/F182247"
            android:layout_marginStart="5sp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="219dp" />

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:src="@drawable/car"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/bottomGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
